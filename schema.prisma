datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model department {
  id           Int         @id @default(autoincrement())
  active       Boolean     @default(true)
  name         String      @default("") @db.VarChar
  code         String
  description  String      @default("") @db.VarChar
  fixedShift   fixedShift? @relation(fields: [fixedShiftId], references: [id])
  fixedShiftId Int?
  employees    employee[]
  createdBy    Int?
  createdAt    DateTime    @default(now())
  updatedBy    Int?
  updatedAt    DateTime?   @updatedAt
  deleteAt     DateTime?   @default(now())
  deleteBy     Int?
}

model employee {
  id            Int         @id @default(autoincrement())
  active        Boolean     @default(false)
  userRole      Int?
  username      String      @unique @db.VarChar(30)
  password      String      @db.VarChar(255)
  email         String      @unique @db.VarChar(60)
  firstname     String?     @db.VarChar(20)
  lastname      String?     @db.VarChar(30)
  businessTitle String?     @db.VarChar(255)
  timeType      Int?
  phone         String?     @db.VarChar(15)
  street        String?     @db.VarChar(40)
  apartment     String?     @db.VarChar(10)
  city          String?     @db.VarChar(20)
  state         String?     @db.VarChar(20)
  zipCode       String?     @db.VarChar(10)
  hireDate      DateTime?   @default(now())
  dateBirth     DateTime?   @default(now())
  department    department? @relation(fields: [departmentId], references: [id])
  departmentId  Int?
  createdBy     Int?
  createdAt     DateTime    @default(now())
  updatedBy     Int?
  updatedAt     DateTime?   @updatedAt
  deleteAt      DateTime?   @default(now())
  deleteBy      Int?
}

model fixedShift {
  id          Int          @id @default(autoincrement())
  active      Boolean      @default(false)
  start       Int
  end         Int
  monday      Boolean      @default(true)
  tuesday     Boolean      @default(true)
  wednesday   Boolean      @default(true)
  thursday    Boolean      @default(true)
  friday      Boolean      @default(true)
  saturday    Boolean      @default(false)
  sunday      Boolean      @default(false)
  createdBy   Int?
  createdAt   DateTime     @default(now())
  updatedBy   Int?
  updatedAt   DateTime?    @updatedAt
  deleteAt    DateTime?    @default(now())
  deleteBy    Int?
  departments department[]
}

model user {
  id            Int       @id @default(autoincrement())
  active        Boolean?  @default(false)
  userRole      Int?
  username      String    @unique @db.VarChar(30)
  password      String    @db.VarChar(255)
  email         String    @unique @db.VarChar(60)
  firstname     String?   @db.VarChar(20)
  lastname      String?   @db.VarChar(30)
  businessTitle String?   @db.VarChar(255)
  timeType      Int?
  phone         String?   @db.VarChar(15)
  street        String?   @db.VarChar(40)
  city          String?   @db.VarChar(20)
  state         String?   @db.VarChar(20)
  zipCode       String?   @db.VarChar(10)
  createdBy     Int?
  createdAt     DateTime  @default(now())
  updatedBy     Int?
  updatedAt     DateTime? @updatedAt
  deleteAt      DateTime? @default(now())
  deleteBy      Int?
}

generator client {
  provider = "prisma-client-js"
}
